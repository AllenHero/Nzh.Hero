@{
    Layout = null;
}
@*@model LoginModel*@
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Altas 后台开发框架-登录</title>
    <meta name="keywords" content="altas快速开发框架">
    <meta name="description" content="altas快速开发框架">
    <link rel="shortcut icon" href="favicon.ico">
    <link href="~/hplus/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/hplus/css/font-awesome.css?v=4.4.0" rel="stylesheet">
    <link href="~/hplus/css/animate.css" rel="stylesheet">
    <link href="~/hplus/css/style.css" rel="stylesheet">
    <link href="~/hplus/css/login.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->
    <script>if (window.top !== window.self) { window.top.location = window.location; }</script>
</head>
<body class="signin">
<div class="signinpanel">
    <div class="row">
        <div class="col-sm-7">
            <div class="signin-info">
                <div class="logopanel m-b">
                    <h1>[Altas]</h1>
                </div>
                <div class="m-b"></div>
                <h4>欢迎使用 <strong>Altas 后台开发框架</strong></h4>
                <ul class="m-b">
                    <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i>基于AspNetCore2.2,跨平台，高性能</li>
                    <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i>让开发更多关注业务逻辑，提高开发效率</li>
                    <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i>多数据库支持</li>
                    <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i> 完全响应式布局（支持电脑、平板、手机等所有主流设备）</li>
                    <li><i class="fa fa-arrow-circle-o-right m-r-xs"></i>默认用户:admin,密码：123123</li>
                </ul>
                @*<strong>还没有账号？ <a href="#">立即注册&raquo;</a></strong>*@
            </div>
        </div>
        <div class="col-sm-5">
            <form method="post" action="/login/LoginOn">
                <h4 class="no-margins">登录</h4>
                <p class="m-t-md">Altas 后台开发框架</p>
                <input type="text" class="form-control uname" name="uname" placeholder="用户名" />
                <input type="password" class="form-control pword m-b" name="pwd" placeholder="密码" />
                @*<a href="">忘记密码了？</a>*@
                <button class="btn btn-success btn-block">登录</button>
            </form>
        </div>
    </div>
    <div class="signup-footer">
        <div class="pull-left">
            &copy; @*2015 All Rights Reserved. H+*@
        </div>
    </div>
</div>
    <!-- 全局js -->
    <script src="~/hplus/js/jquery.min.js?v=2.1.4"></script>
    <script src="~/hplus/js/bootstrap.min.js?v=3.3.6"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var loginWidth = $(window).width() - $(".login-bg").width();
            $(".login-warp").css("width", loginWidth+"px");
        });
    </script>
    <!--统计代码，可删除-->
</body>
</html>

