@{
    ViewBag.Title = "测试";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-sm-12">
            <div class="ibox ">
                <div id="toolbar" class="btn-group">
                  
                </div>
                <div class="jqGrid_wrapper">
                    <table id="demoTable"></table>
                    
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script>
        var $demoTable;
        $(function() {
            loadGrid();
        });

        function loadGrid() {
            $demoTable=$("#demoTable").bootstrapTable({
                url: '/demo/getdata',
                toolbar: '#toolbar',       
                pagination: true,
                height: $(window).height()-50,
                pageSize: 15,
                pageList: [5, 10, 15, 20],
                showColumns: true,
                showRefresh: true,
                clickToSelect: true, 
                sidePagination: "server", 
                locale: "zh-CN",
                striped: true,
                columns: [
                    { field: 'ck', checkbox: true },
                    { field: 'Name', title: '名称', align: 'center' },
                    { field: 'Sex', title: '性别', align: 'center'  },
                    { field: 'Age', title: '年龄', align: 'center'  },
                    { field: 'Remark', title: '备注', align: 'center'  }
                ]
                
            });  
            jutils.initToolBar('#toolbar', true);
        }


        function add() {
            jutils.dialogForm('测试信息', '/demo/form', {id:''},function () {
                $demoTable.bootstrapTable('refresh');
            });
        }

        function edit() {
            var rows = $demoTable.bootstrapTable('getSelections');
            //console.log(rows);
            if (rows.length === 1) {
                // console.log(rows);
                jutils.dialogForm('测试信息', '/demo/form', {id:rows[0].Id},
                    function() {
                        $demoTable.bootstrapTable('refresh');
                    });
            } else {
                jutils.warn('请选择一条需要编辑的数据行');
            }
         
        }

        function del() {
            var rows = $demoTable.bootstrapTable('getSelections');
            if (rows.length === 0) {
                jutils.warn('请选择需要删除的数据行');
                return;
            }
            var ids = [];
            for (var i = 0; i < rows.length; i++) {

                ids.push(rows[i].Id);

            }
            jutils.confirm('确认删除吗',
                function() {
                    jutils.ajaxGet('/demo/DelUserByIds',
                        { ids: ids.join() },
                        function() {
                            $demoTable.bootstrapTable('refresh');
                        });
                });
        }
    </script>
}